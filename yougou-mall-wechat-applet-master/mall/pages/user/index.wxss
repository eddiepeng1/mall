/* pages/user/index.wxss */

page{
    background-color: #edece8;
}


.user_info_wrap{
    height: 45vh;
    background-color: var(--themeColor);
    overflow: hidden;
}

.user_info_wrap .user_img_wrap .user_bg{
    height: 50vh;
    filter: blur(10rpx);
}

.user_info_wrap .user_img_wrap{
    position: relative;
}

.user_info_wrap .user_info{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 20%;
    text-align: center;
}

.user_icon{
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
}

.user_name{
    color: #fff;
    margin-top: 40rpx;
    font-size: 40rpx;
}

.user_btn{
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    top: 10%;
    border: 1rpx solid greenyellow;
    color: greenyellow;
    font-size: 38rpx;
    padding: 30rpx;
    border-radius: 10rpx;
}



.user_content{
    position: relative;
}

.user_main{
    padding-bottom: 100rpx;
    color: #666;
    position: absolute;
    width: 90%;
    left: 50%;
    transform: translateX(-50%);
    top: -40rpx;
}

.histroy_wrap{
    background-color: #fff;
    display: flex;
}

.histroy_wrap navigator{
    flex: 1;
    text-align: center;
    padding: 10rpx;
}

.histroy_wrap navigator .his_num{
    color: var(--themeColor);
}


.user_content .orders_wrap{
    background-color: #fff;
    margin-top: 30rpx;
}

.orders_title{
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
}

.orders_content{
    display: flex;
}

.orders_content navigator{
    flex: 1;
    padding: 15rpx 0;
    text-align: center;
}

.orders_content .iconfont{
    color: var(--themeColor);
    font-size: 50rpx;
}


.address_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}

.app_info_wrap{
    margin-top: 30rpx;
    background-color: #fff;

}

.app_info_item{
    padding: 20rpx;
    border-bottom: 1px solid #ccc;
}

.app_info_contact{
    display: flex;
    justify-content: space-between;
}

.recommend_wrap{
    margin-top: 30rpx;
    background-color: #fff;
    padding: 20rpx;
}

.logout-btn {
  width: 100%;
  padding: 10rpx;
  margin-top: 20rpx;
  background-color: #ff2d4a;
  color: white;
  text-align: center;
  border-radius: 5rpx;
}